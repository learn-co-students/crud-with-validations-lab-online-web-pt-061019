<h2>Create a Song</h2>
<% if @song.errors.any? %>
    <div id="error_explanation">
      <h2>There were some errors:</h2>
      <ul>
        <% @song.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_for(@song) do |f| %>
    Song Title: <%= f.text_field :title %>
    Artist: <%= f.text_field :artist_name %>
    Genre: <%= f.text_field :genre %>
    Released: <%= f.check_box :released %>
    Year Released: <%= f.number_field :release_year %>

    <%= f.submit %>

<% end %>
