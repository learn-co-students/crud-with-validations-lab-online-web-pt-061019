<h1>Songs List</h1>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Release Year</th>
            <th>Artist Name</th>
            <th>Genre</th>
        </tr>
    </thead>
    <tbody>
        <% @songs.each do |song| %>
        <tr>
            <td><%= link_to song.title, song_path(song) %></td>
            <td><%= song.release_year %></td>
            <td><%= song.artist_name %></td>
            <td><%= song.genre %></td>
            <td>
                <%= link_to 'Edit', edit_song_path(song) %>
                <%= link_to 'Delete', song_path(song), method: :delete %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>

<%= button_to 'Create Song', new_song_path, :method => :get %>